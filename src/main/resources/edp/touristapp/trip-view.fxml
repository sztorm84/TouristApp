<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>

<?import edp.touristapp.components.ColoredButton?>
<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edp.touristapp.controllers.TripController">

    <ListView fx:id="tripsListView" prefHeight="200" prefWidth="300" />
    <ColoredButton fx:id="selectButton" contentDisplay="CENTER" onAction="#handleSelect" prefHeight="22.0" prefWidth="84.0" text="Select">
      <VBox.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </VBox.margin></ColoredButton>
   <ColoredButton fx:id="deleteTripButton" contentDisplay="CENTER" onAction="#handleDeleteTrip" prefHeight="22.0" prefWidth="84.0" text="Delete">
      <VBox.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </VBox.margin>
   </ColoredButton>
</VBox>
